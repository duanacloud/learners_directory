<%= form_for(@resource) do |f| %>
  
<%= render 'layouts/error_messages' %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :summary %><br>
    <%= f.text_area :summary %>
  </div>
  <div class="field">
    <%= f.label :link %><br>
    <%= f.text_field :link %>
  </div>

  <ul>
    <li>
      <% @tags.each do |tag| %>
      <%= check_box_tag 'resource[tag_names][]', tag.name, (@resource.tags.any? { |t|
        t.name == tag.name
      }) %>
      <span class="label label-info tag"><%= tag.name %></span>

      <!-- doesnt take input yet -->
      <%#= button_tag tag.name, :class => "label label-info tag", :type => "submit" %>
      <% end %>
    </li>
  </ul>
  <select multiple name="tag_names">
    <% @tags.each do |tag| %>
      <option><%= tag.name %></option>
    <% end %>
  </select>
    
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
